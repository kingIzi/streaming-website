<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Ba Videos</title>
    <link rel="stylesheet" href="css/main.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://use.fontawesome.com/releases/v5.7.0/css/all.css"
      integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="hero">
      <%- include('partials/navBar.ejs') %>
      <div class="container hide-overflow">
        <h1
          class="text-uppercase text-white text-center h1"
          style="padding: 20px"
        >
          Ba Video
        </h1>
        <div class="row row-cols-1 row-cols-md-2 g-4">
          <% videos.forEach((video,index) => { %>
          <div class="col">
            <div class="card">
              <img
                src="<%= video.thumbnailUrl %>"
                class="card-img-top"
                alt="..."
              />
              <div class="card-body">
                <div class="d-flex bd-highlight">
                  <h5 class="card-title flex-grow-1"><%= video.title %></h5>
                  <ul>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                  </ul>
                </div>
                <p class="card-text"><%= video.description %></p>
              </div>
              <a href="/nowStreaming/<%= video.videoId %>" class="play-icon"
                ><i class="fa fa-play" aria-hidden="true"></i
              ></a>
              <script></script>
            </div>
          </div>

          <%}); %>
        </div>
      </div>
    </div>
    <script src="js/scripts.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"
      defer
    ></script>
  </body>
</html>
