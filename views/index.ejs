            <div class="avatar">Bo S'aboné</div>
          </div>
          <div class="login-form-container">
            <label for="fullName"><b>Nkombo na yo</b></label>
            <input
              type="text"
              placeholder="Koma email na yo"
              name="fullName"
              required
            />
            <label for="telephone"><b>Nimero ya telephone (Optionel)</b></label>
            <input
              type="text"
              placeholder="Koma email na yo"
              name="telephone"
              required
            />

            <label for="email"><b>Email na yo</b></label>
