  <body style="background: #111">
    <div class="index-hero">
      <div id="login-modal-id" class="login-modal">
        <form
          id="login-form"
          class="login-modal-content animate-login-modal"
          action="/index"
          method="POST"
        >
          <div class="imgcontainer">
            <span
              onclick="loginFormModalDisplayNone('login-modal-id')"
              class="close"
              title="Close Modal"
              >&times;</span
            >
            <div class="avatar">Se Connecter</div>
          </div>
          <div class="login-form-container">
            <label for="email"><b>Email na yo</b></label>
            <input
              type="email"
              placeholder="Koma email na yo"
              name="email"
              required
            />

            <label for="psw"><b>Mot de passe</b></label>
            <input
              type="password"
              placeholder="Koma mot de passe"
              name="psw"
              required
            />

            <button type="submit">Connexion</button>
            <label>
              <input type="checkbox" checked="checked" name="remember" />
              Kanisa ngai
            </label>
          </div>
          <div class="login-form-container">
            <button
              type="button"
              onclick="loginFormModalDisplayNone('login-modal-id')"
              class="cancelbtn"
            >
              Longola
            </button>
            <span class="psw">Obosani <a href="#">mot de passe?</a></span>
          </div>
        </form>
      </div>
