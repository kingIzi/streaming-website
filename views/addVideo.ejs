<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bakisa Video</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="hero">
      <%- include('partials/navBar.ejs') %>
      <form
        method="POST"
        class="container profile-container"
        id="add-video-form"
      >
        <div class="mb-4">
          <label for="videoTitle" class="form-label">Kombo ya video</label>
          <input
            type="text"
            class="form-control"
            id="videoTitle"
            placeholder="Koma kombo na yo"
            name="videoTitle"
          />
        </div>
        <div class="mb-4">
          <label for="exampleFormControlTextarea1" class="form-label"
            >Ndimbola ya video</label
          >
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            rows="3"
            placeholder="Koma ndimbola ya video awa"
            name="description"
          ></textarea>
        </div>
        <div class="mb-4">
          <label for="thumbnail-file" class="form-label">Thumbnail</label>
          <input
            placeholder="Pona image ya kobakisa"
            class="form-control"
            type="file"
            id="thumbnail-file"
            name="thumbnail"
            accept="image/*"
          />
        </div>
        <label for="thumbnailProgress">Progrès:</label>
        <progress id="thumbnailProgress" value="0" max="100"></progress>
        <div class="mb-4">
          <label for="formFile" class="form-label">Video (.mp4)</label>
          <input
            placeholder="Pona video ya kobakisa"
            class="form-control"
            type="file"
            id="formFile"
            name="video"
            accept="video/*"
          />
        </div>
        <label for="videoProgress">Progrès:</label>
        <progress id="videoProgress" value="0" max="100"></progress>
        <div class="d-flex flex-row-reverse bd-highlight">
          <button type="submit" class="cancelbtn">Sauvegarder</button>
          <button
            onclick="resetFormData('add-video-form')"
            id="reset-form"
            type="button"
            class="cancelbtn"
          >
            Bandela
          </button>
        </div>
      </form>
    </div>
    <script
      src="https://www.gstatic.com/firebasejs/7.14.1/firebase-app.js"
      defer
    ></script>
    <script
      src="https://www.gstatic.com/firebasejs/7.14.1/firebase-auth.js"
      defer
    ></script>
    <script
      src="https://www.gstatic.com/firebasejs/7.14.1/firebase-storage.js"
      defer
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"
      defer
    ></script>
    <script src="js/scripts.js"></script>
    <script>
      addVideoPageLoaded(window);
    </script>
  </body>
</html>
