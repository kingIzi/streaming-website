<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile na ngai</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
  </head>
  <body>
    <div class="hero">
      <%- include('partials/navBar.ejs') %>
      <form method="POST" class="container profile-container">
        <!-- <img
          src="https://mdbcdn.b-cdn.net/img/new/avatars/2.webp"
          class="avatar-img rounded-circle"
          style="width: 150px"
          alt="Avatar"
        /> -->
        <div class="mb-3">
          <label for="fullName" class="form-label">Kombo na yo</label>
          <input
            type="text"
            class="form-control"
            id="fullName"
            placeholder="Koma kombo na yo"
          />
        </div>
        <div class="mb-3">
          <label for="phone-number" class="form-label">Nimero ya tshombo</label>
          <input
            type="number"
            class="form-control"
            id="phone-number"
            placeholder="Koma nimero na yo"
          />
        </div>
        <div class="mb-3">
          <label for="exampleFormControlInput1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleFormControlInput1"
            placeholder="name@example.com"
          />
        </div>
        <div class="d-flex flex-row-reverse bd-highlight">
          <button type="submit" class="cancelbtn">Sauvegarder</button>
          <button type="button" class="cancelbtn">Longola</button>
        </div>
      </form>
      <br /><br />
      <a href="/sessionLogout"
        ><button type="button" class="btn btn-outline-danger sign-out-btn">
          Se Deconnecter
        </button></a
      >
    </div>
    <script
      src="https://www.gstatic.com/firebasejs/7.14.1/firebase-app.js"
      defer
    ></script>
    <script
      src="https://www.gstatic.com/firebasejs/7.14.1/firebase-auth.js"
      defer
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"
      defer
    ></script>
    <script src="js/scripts.js"></script>
  </body>
</html>
